<h1>Reviews for <%= link_to @movie.title, @movie %></h1>

<div></div>
  <ul class="reviews">
    <% @review.each do |review| %>
      <li>
        <%= render "shared/stars", percent: review.stars_as_percent %> by 
        <p>
          <%= link_to review.user.name, review.user %> 
          <span class="date">
            <%= time_ago_in_words(review.created_at) %>
          </span>
        </p>
        <p>
          <%= review.comment %>
        </p>
      </li>
    <% end %>
  </ul>
<!DOCTYPE html>
<html>
  <head>
    <title>Flick$</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= image_tag("logo") %>
        <ul>
          <li><%= link_to "All Movies", movies_path %></li>
        </ul>
      </nav>
    </header>

    <div class="content">
      <%= yield %>
    </div>

    <footer>
      <p>
      Copyright &copy; 2018-<%= Time.now.year %>
      Made with grit by <%= link_to 'David Lineman', 'https://davidlineman.netlify.com/' %>
      </p>
    </footer>

  </body>
</html>

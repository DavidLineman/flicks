<h1><%= @movie.title %></h1>

<p>
  <%= @movie.rating %>
</p>

<p>
  <%= @movie.description %>
</p>

<p>
  <%= total_gross(@movie) %>
</p>

<p>
  <%= @movie.released_on %>
</p>

<section class="admin">
  <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
</section>

<%= link_to "Delete", @movie, class: "button", method: :delete,
                      data: { confirm: "Are you sure?" } %>